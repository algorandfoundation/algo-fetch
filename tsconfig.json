{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "swc": true,
    "esm": true
  }
}
